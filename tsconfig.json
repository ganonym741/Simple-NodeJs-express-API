{
    "compilerOptions": {
      "lib": ["es5", "es6", "dom"],
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true
    },
    "exclude": ["node_modules", "dist"]
}
  